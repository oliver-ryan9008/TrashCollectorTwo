@model TrashCollector2.Models.Customer

@{
    ViewBag.Title = "MoneyOwed";
}

<h3>@Model.FullName, here is a summary of your accounts due: </h3>
<hr />

<div>
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.MoneyOwed):
        </dt>

        <dd>
            $@Html.DisplayFor(model => model.MoneyOwed).00
        </dd>
    </dl>
</div>
<br /><br /><br /><br />
<hr />
<p>
    <input type="button" class="btn btn-success" value="Home" onclick="location.href='@Url.Action("CustomerHome", "Customers")'" />
    <input type="button" class="btn btn-success" value="Pay Balance" onclick="location.href='@Url.Action("PayForPickups", "Customers")'" />
</p>
