@{ Layout = null;}
<!DOCTYPE HTML>
<html>
<head>
    <title>Best In Town Recycling</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
    <link rel="stylesheet" href="~/Content/HomeStyles/assets/css/main.css" type="text/css"/>
</head>
<body class="is-preload">

    <!-- Header -->
    <header id="header">
        <h1>Best In Town Recycling</h1>

    </header>

    <div>
        <p>
            A hometown style recycling and garbage collecting service,<br />
            purposefully created to serve your every recycling need in an environmentally<br />
            responsible fashion.
        </p>
    </div>
    <!-- Signup Form -->
    @using (Html.BeginForm())
    {
        <input type="button" class="btn btn-success" value="Log In" onclick="location.href='@Url.Action("Login", "Account")'" />
        <input type="button" class="btn btn-success" value="Sign Up" onclick="location.href='@Url.Action("Register", "Account")'" />
    }
    <!-- Footer -->
    <!-- Scripts -->
    <script src="~/Content/HomeStyles/assets/js/main.js" type="text/javascript"></script>

</body>
</html>