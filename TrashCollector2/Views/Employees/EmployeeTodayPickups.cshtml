@model IEnumerable<TrashCollector2.Models.Customer>

@{
    ViewBag.Title = "Today's Pickups";
}

<h2>Your pickups for today:</h2>

<table class="table table-hover">
        <tr class="table-primary">
            <th scope="col">
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.StreetAddress)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.ZipCode)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.WeeklyPickupDay)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.OneTimePickupDate)
            </th>
            <th scope="col">

            </th>
        </tr>
        @if (Model != null)
        {
            foreach (var item in Model)
            {

                @Html.HiddenFor(modelItem => item.UserId)
                <tr class="table-info">
                    <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StreetAddress)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ZipCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.WeeklyPickupDay)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OneTimePickupDate)
                    </td>
                    <td>
                        @Html.ActionLink("Confirm Pickup", "ConfirmPickup", "Employees", new { id = item.UserId }, new { @class = "btn btn-success" }) @Html.ActionLink("Map This", "SeeCustomersOnMap", new { id = item.UserId }, new { @class = "btn btn-success"})
                    </td>
                </tr>
            }
        }
</table>

<div>
    <input type="button" class="btn btn-success" value="View All Pickups On Map" onclick="location.href='@Url.Action("SeeCustomersOnMap", "Employees")'" />
</div>
