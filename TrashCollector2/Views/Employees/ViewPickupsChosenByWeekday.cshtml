@model IEnumerable<TrashCollector2.Models.Customer>

@{
    ViewBag.Title = "FilteredDay";
}

<h2>Here are your @(ViewBag.dayToSee) pickups:</h2>

<table class="table table-hover">
    <tr class="table-primary">
        <th scope="col">
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th scope="col">
            @Html.DisplayNameFor(model => model.FullName)
        </th>
        <th scope="col">
            @Html.DisplayNameFor(model => model.StreetAddress)
        </th>
        <th scope="col">
            @Html.DisplayNameFor(model => model.ZipCode)
        </th>
        <th scope="col">
            @Html.DisplayNameFor(model => model.WeeklyPickupDay)
        </th>
        <th scope="col">
            @Html.DisplayNameFor(model => model.OneTimePickupDate)
        </th>
    </tr>

    @if (Model != null)
    {
        foreach (var item in Model)
        {
            @Html.HiddenFor(modelItem => item.UserId)
                <tr class="table-info">
                    <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StreetAddress)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ZipCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.WeeklyPickupDay)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OneTimePickupDate)
                    </td>
                </tr>
        }
    }
</table>
<hr />
@Html.ActionLink("Home", "EmployeeTodayPickups", "Employees")
